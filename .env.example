# Application name
APP_NAME=Laravel

# Application environment (development, production, etc.)
APP_ENV=production

# Application key (used for encryption)
APP_KEY=base64:your_app_key_here

# Debug mode (set to false for production)
APP_DEBUG=false

# Application URL
APP_URL=http://localhost

# Log channel (where logs are stored)
LOG_CHANNEL=stack

# Log level (debug, info, error, etc.)
LOG_LEVEL=debug

# Database connection
DB_CONNECTION=mysql

# Database host (using the MySQL service name)
DB_HOST=mysql-service 

# Database port
DB_PORT=3306

# Database name
DB_DATABASE=my_php_db

# Database username
DB_USERNAME=my_php-user

# Database password (leave empty, it's in the Secret)
DB_PASSWORD=

# Broadcast driver (for real-time features)
BROADCAST_DRIVER=log

# Cache driver (using Redis)
CACHE_DRIVER=redis

# Queue connection (for background jobs)
QUEUE_CONNECTION=sync

# Redis host (using the Redis service name)
REDIS_HOST=redis-service

# Redis password (if any)
REDIS_PASSWORD=null

# Redis port
REDIS_PORT=6379

# Mail mailer (for sending emails)
MAIL_MAILER=smtp

# Mail host (using MailHog for testing)
MAIL_HOST=mailhog

# Mail port
MAIL_PORT=1025

# Mail username (if required)
MAIL_USERNAME=null

# Mail password (if required)
MAIL_PASSWORD=null

# Mail encryption (tls, ssl, or null)
MAIL_ENCRYPTION=null

# Mail from address
MAIL_FROM_ADDRESS=null

# Mail from name
MAIL_FROM_NAME="${APP_NAME}"

# AWS credentials (if using AWS services)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# AWS S3 bucket (if using S3 for storage)
AWS_BUCKET=

# Pusher credentials (for real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# Mix pusher configuration (for Laravel Mix)
MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
